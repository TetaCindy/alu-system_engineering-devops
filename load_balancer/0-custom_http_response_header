#!/usr/bin/env bash
# Configures Nginx with a custom HTTP response header

# Update package list and install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Get the hostname of the server
# shellcheck disable=SC2154
hostname=$(hostname)

# Configure Nginx to add custom header
# Create a configuration snippet for the custom header
cat > /etc/nginx/conf.d/custom_header.conf <<EOF
add_header X-Served-By $hostname;
EOF

# Alternatively, you can add it directly to the default site configuration
# This approach modifies the server block in the default config
sed -i "/server_name _;/a \\\tadd_header X-Served-By $hostname;" /etc/nginx/sites-available/default

# Remove the conf.d file since we're using the inline approach
rm -f /etc/nginx/conf.d/custom_header.conf

# Test Nginx configuration for syntax errors
nginx -t

# Restart Nginx to apply changes
service nginx restart
